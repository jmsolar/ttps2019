@model MercadoVentasTP.Models.Publicacion

@{
    ViewBag.Title = "Detalle de " + Model.Titulo;
}

<div class="jumbotron">
    <h1 class="display-3 text-right">@ViewBag.Titulo</h1>
    <p class="lead text-right">@ViewBag.Subtitulo</p>
    <hr class="my-4">
    <p class="text-right">@ViewBag.Parrafo</p>
</div>

@if (TempData["Success"] != null)
{

    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        <strong class="text-center">@TempData["Success"].ToString()</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div id="publicacion" class="row mx-2">
    <div class="col-sm-12 col-lg-6 mb-4">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ul>
            <!-- The slideshow -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://www.blogdelfotografo.com/wp-content/uploads/2012/03/Globo.jpg" alt="Los Angeles" width="1100" height="500" class="rounded">
                </div>
                <div class="carousel-item">
                    <img src="https://www.blogdelfotografo.com/wp-content/uploads/2012/03/nubes.jpg" alt="Chicago" width="1100" height="500" class="rounded">
                </div>
                <div class="carousel-item">
                    <img src="https://www.blogdelfotografo.com/wp-content/uploads/2012/03/Dia-Lluvioso.jpg" alt="New York" width="1100" height="500" class="rounded">
                </div>
            </div>
            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>
    <div class="col-sm-12 col-lg-6">
        <div class="form-group">
            <fieldset disabled>
                @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label", @for = "titulo" })
                <input class="form-control" id="titulo" type="text" value="@Html.DisplayFor(model => model.Titulo)" disabled>
            </fieldset>
        </div>
        <div class="form-group">
            <fieldset disabled>
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label", @for = "descripcion" })
                @Html.TextAreaFor(model => model.Descripcion, htmlAttributes: new { @class = "form-control", @id = "descripcion", @type = "text", @rows = "7", @resize = "none", @disabled = "disabled" })
            </fieldset>
        </div>
        <div class="row">
            <div class="col">
                <fieldset disabled>
                    @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "control-label", @for = "precio" })
                    <input class="form-control" id="precio" type="text" value="@Html.DisplayFor(model => model.Precio)" disabled>
                
                </fieldset>
            </div>
            <div class="col">
                <fieldset disabled>
                    @Html.LabelFor(model => model.PrecioMin, htmlAttributes: new { @class = "control-label", @for = "precioMin" })
                    <input class="form-control" id="precionMin" type="text" value="@Html.DisplayFor(model => model.PrecioMin)" disabled>
                </fieldset>
            </div>
            <div class="col">
                <fieldset disabled>
                    @Html.LabelFor(model => model.PrecioMax, htmlAttributes: new { @class = "control-label", @for = "precioMax" })
                    <input class="form-control" id="precioMax" type="text" value="@Html.DisplayFor(model => model.PrecioMax)" disabled>
                </fieldset>
            </div>
        </div>
        <div class="form-group mt-3">
            <fieldset disabled>
                @Html.LabelFor(model => model.Stock, htmlAttributes: new { @class = "control-label", @for = "stock" })
                <input class="form-control" id="stock" type="number" value="@Html.DisplayFor(model => model.Stock)" disabled>
            </fieldset>
        </div>
        <div class="form-group mt-3">
            <fieldset disabled>
                @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label", @for = "stock" })
                <input class="form-control" id="stock" type="text" value="@Html.DisplayFor(model => model.Estado)" disabled>
            </fieldset>
        </div>
    </div>
</div>
<hr />
<div class="row mx-2 mb-3">
    <div class="col-2">
        <a href="@Url.Action("Index", "Publicacion")" class="btn btn-block btn-primary">
            <span class="glyphicon glyphicon-chevron-left glyphicon-lg"></span>
        </a>
    </div>
    <div class="col-7">
        <a href="@Url.Action("Edit", "Publicacion", new { id = Model.Id })" class="btn btn-block btn-warning">
            <span class="glyphicon glyphicon-pencil glyphicon-lg"></span>
        </a>
    </div>
    <div class="col-3">
        <a href="@Url.Action("Delete", "Publicacion", new { id = Model.Id })" class="btn btn-block btn-danger">
            <span class="glyphicon glyphicon-trash glyphicon-lg"></span>
        </a>
    </div>
</div>

@section Custom {

    <script type="text/javascript">
        
        function redirigir() {
            if ('@TempData["Anterior"]' == "Home") {
                window.location.href='@Url.Action("Index", "Home")';
            }
            else {
                if ('@TempData["Anterior"]' == "Manage") {
                    window.location.href = '@Url.Action("Index", "Manage")';
                }
            }
        }

    </script>

}