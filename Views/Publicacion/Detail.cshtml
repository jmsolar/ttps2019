@model MercadoVentasTP.Models.Publicacion

@{
    ViewBag.Title = "Detalle de " + Model.Titulo;
}

<div class="jumbotron">
    <h1 class="display-3 text-right">@ViewBag.Titulo</h1>
    <p class="lead text-right">@ViewBag.Subtitulo</p>
    <hr class="my-4">
    <p class="text-right">@ViewBag.Parrafo</p>
</div>

@if (TempData["Info"] != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        <strong class="text-center">@TempData["Info"].ToString()</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    Session["Info"] = null;
}
@if (TempData["Error"] != null)
{
<div class="alert alert-warning alert-dismissible fade show text-center" role="alert">
    <strong class="text-center">@TempData["Error"].ToString()</strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
}
<div id="publicacion" class="row mx-2">
    <div class="col-sm-12 col-lg-6 mb-4">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ul>
            <!-- The slideshow -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://www.blogdelfotografo.com/wp-content/uploads/2012/03/Globo.jpg" alt="Los Angeles" width="1100" height="500" class="rounded">
                </div>
                <div class="carousel-item">
                    <img src="https://www.blogdelfotografo.com/wp-content/uploads/2012/03/nubes.jpg" alt="Chicago" width="1100" height="500" class="rounded">
                </div>
                <div class="carousel-item">
                    <img src="https://www.blogdelfotografo.com/wp-content/uploads/2012/03/Dia-Lluvioso.jpg" alt="New York" width="1100" height="500" class="rounded">
                </div>
            </div>
            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>
    <div class="col-sm-12 col-lg-6">
        <div class="form-group">
            <fieldset disabled>
                @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label", @for = "titulo" })
                <input class="form-control" id="titulo" type="text" value="@Html.DisplayFor(model => model.Titulo)" disabled>
            </fieldset>
        </div>
        <div class="form-group">
            <fieldset disabled>
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label h5", @for = "descripcion" })
                @Html.TextAreaFor(model => model.Descripcion, htmlAttributes: new { @class = "form-control", @id = "descripcion", @type = "text", @rows = "7", @resize = "none", @disabled = "disabled" })
            </fieldset>
        </div>
        <div class="row">
            <div class="col">
                <fieldset disabled>
                    <label class="control-label" for="precio">Precio</label>
                    <input class="form-control" id="precio" type="text" value="@Html.DisplayFor(model => model.PrecioActual)" disabled>
                </fieldset>
            </div>
        </div>
    </div>
</div>
<div class="row m-3">
    <div class="col-3">
        <a href="@Url.Action("Index", "Home")" class="btn btn-block btn-primary">
            <span class="glyphicon glyphicon-chevron-left glyphicon-lg"></span>
        </a>
    </div>
    <div class="col-9">
        @Html.ActionLink(" ", "AgregarPublicacion", "Carrito", new { id = Model.Id }, new { @class = "btn btn-block btn-success glyphicon glyphicon-shopping-cart glyphicon-lg py-3" })
    </div>
</div>

@section Custom {
    <script type="text/javascript">
        $(document).ready(function () {
            $('html,body').animate(
                { scrollTop: $('#publicacion').offset().top - 10 }, 'slow'
            );
        });
    </script>
}