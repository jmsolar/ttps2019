@model MercadoVentasTP.Models.LoginViewModel
@{
    ViewBag.Title = "Inicio de sesión";
    Layout = "~/Views/Shared/_LayoutClear.cshtml";
}

<div class="row m-5">
    <div class="col-12">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-11">
                        <h4>Iniciar sesión</h4>
                    </div>
                    <div class="col-1">
                        <a href="@Url.Action("Index", "Home")" class="close">
                            <span class="closeLogin" aria-hidden="true">×</span>
                        </a>
                    </div>
                </div>
                <hr class="mb-5 mt-2" />
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger d-block mt-2" })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6 offset-md-3">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger d-block mt-2" })
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6 offset-md-3">
                        <div class="custom-control custom-checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input", @id = "customCheck1", @checked = true })
                            @Html.LabelFor(m => m.RememberMe, new { @class = "custom-control-label", @for = "customCheck1" })
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-6 offset-md-3">
                        <input type="submit" value="Ingresar" class="btn btn-outline-success btn-block" />
                    </div>
                </div>
                <!--
                <div class="row mt-4">
                    <div class="col-5 ml-auto">
                        <a href="@Url.Action("ForgotPassword", "Account")" class="btn btn-secondary text-left sinCuenta text-transform-initial d-inline" title="Registrate">
                            <span class="text-danger">
                                Olvide mi contraseña
                            </span>
                        </a>
                    </div>
                </div>
            -->
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}