@using MercadoVentasTP.Models
@model IEnumerable<Compra>

@{

    ViewBag.Title = "Mis Calificaciones | MercadoVentas";
    ViewBag.Titulo = "Mis Calificaciones!";
    ViewBag.Subtitulo = "Desde acá vas a poder calificar tus compras.";
    ViewBag.Informacion = "Con solo dos clicks podés editar tus preferencias!";
}


<div class="jumbotron mb-5">
    <h1 class="display-3 text-right">Calificación</h1>
    <p class="lead text-right">
        Desde acá vas a poder visualizar tus compras realizadas y no calificadas
        <hr class="my-4">
    <p class="text-right">Podés dejar tu opinión en pocos clicks!</p>
</div>
<div class="container">
    <div class="card border-secondary mt-3 mb-5 shadow">
        <div class="mt-4">
            <h4 class="text-center mt-3">Calificá tus compras realizadas</h4>
        </div>

        <div id="myTabContent" class="tab-content mt-4">
            <div class="tab-pane fade active show">
                <!-- PESTAÑA - COMPRAS CALIFICADAS-->
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success ml-4 mr-5 mt-3 card alert-dismissible fade show text-center" role="alert">
                        <strong class="text-center">@TempData["Success"].ToString()</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
            <div class="">
                @if (Model.Any())
                {
                    <table class="mr-2 table table-hover table-bordered">
                        <thead class="thead-dark mr-3">
                            <tr>
                                <th scope="col" class="text-center">N° de compra</th>
                                <th scope="col" class="text-center">Fecha</th>
                                <th scope="col" class="text-center">Monto de la compra</th>
                                <th scope="col" class="text-center">Acciones</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var compra in Model.ToList())
                            {
                            <tr>
                                <td class="text-center">#@Html.DisplayFor(modelItem => compra.Id)</td>
                                <td class="text-center">@Html.DisplayFor(modelItem => compra.Fecha)</td>
                                @*  SE MUESTRAN TODOS LOS PRODUCTOS DE ESA COMPRA *@
                                <td class="text-center">@Html.DisplayFor(modelItem => compra.Monto)</td>
                                <td class="text-center">
                                    @Html.ActionLink("Ver compra y calificar", "Index", "Tiene", new { idCompra = compra.Id }, new { @class = "btn btn-success btn-block" })
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                } else {
                    <table class="mr-2 table table-hover table-bordered">
                        <thead class="thead-dark mr-3">
                            <tr>
                                <th scope="col" class="text-center">N° de compra</th>
                                <th scope="col" class="text-center">Fecha</th>
                                <th scope="col" class="text-center">Monto de la compra</th>
                                <th scope="col" class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="5" class="mb-5 text-center">No tienes compras pendientes de calificación</td>
                            </tr>
                        </tbody>
                    </table>
                }
                <!-- PAGINADOR DE LA TABLA-->
            </div>
            </div>
        </div>
    </div>
</div>